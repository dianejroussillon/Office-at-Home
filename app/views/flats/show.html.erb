<div class="container">
  <div class="second-container">
    <h1><%= @flat.name.capitalize %></h1>
    <p> <%= @flat.address %> </p>
    <p> <%= @flat.description %> </p>
    <p> <%= @flat.price_per_day %> </p>

    <%= link_to "Add a review", new_flat_review_path(@flat), class: 'btn btn-primary' %>
    <%= link_to 'Edit your flat', edit_flat_path, class: 'btn btn-primary' %>

    <div class="img">
      <% unless @flat.photo.blank? %>
      <%= cl_image_tag @flat.photo, height: 300, width: 400, crop: :fill  %>
      <% end %>
    </div>
</div>
