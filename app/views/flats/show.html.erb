<div class="container">
  <div class="second-container">
    <h1><%= @flat.name.capitalize %></h1>
    <p>(<%= pluralize @flat.reviews.size, "review" %> associated)</p>
    <div class="panel-body">
      <div class="row row-condensend space-4">
        <div class="text-right col-sm-3">
          <p><strong>Address</strong></p>
        </div>
        <div class="text-left col-sm-9" id="no-border" style="padding-left: 38px;">
          <p> <%= @flat.address %></p>
        </div>
      </div>

      <div class="row row-condensend space-4">
        <div class="text-right col-sm-3">
          <p><strong>Description</strong></p>
        </div>
        <div class="text-left col-sm-9" id="no-border" style="padding-left: 38px;">
          <p> <%= @flat.description %> </p>
        </div>
      </div>

      <div class="row row-condensend space-4" style="text-align: center;">
        <div class="text-right col-sm-3">
          <p><strong>Feature</strong></p>
        </div>
        <div class="text-left col-sm-9" id="no-border">
          <% if @flat.wifi %>
          <div class="col-sm-4 text-center" style="height: 88px;">
              <i class="fas fa-wifi"></i>
              <p> Wifi</p>
          </div>
            <% end %>
            <% if @flat.meeting_room %>
          <div class="col-sm-4 text-center" style="height: 88px;">
              <i class="fas fa-briefcase"></i>
              <p> Meeting-room </p>
          </div>
            <% end %>
            <% if @flat.projector %>
          <div class="col-sm-4 text-center" style="height: 88px;">
              <i class="fas fa-video"></i>
              <p> Projector </p>
          </div>
            <% end %>
            <% if @flat.screen %>
          <div class="col-sm-4 text-center" style="height: 88px;">
              <i class="fas fa-tv"></i>
              <p> TV Screen </p>
          </div>
            <% end %>
            <% if @flat.speaker %>
          <div class="col-sm-4 text-center" style="height: 88px;">
              <i class="fas fa-volume-up"></i>
              <p> Loud speaker </p>
          </div>
            <% end %>
            <% if @flat.games %>
          <div class="col-sm-4 text-center" style="height: 88px;">
              <i class="fas fa-dice-six"></i>
              <p> Video games </p>
          </div>
            <% end %>
            <% if @flat.storage %>
          <div class="col-sm-4 text-center" style="height: 88px;">
              <i class="fas fa-archive"></i>
              <p> Place for storage </p>
          </div>
            <% end %>
            <% if @flat.coffee %>
          <div class="col-sm-4 text-center" style="height: 88px;">
              <i class="fas fa-coffee"></i>
              <p> Coffee machine</p>
          </div>
            <% end %>
            <% if @flat.teapot %>
          <div class="col-sm-4 text-center" style="height: 88px;">
              <i class="fas fa-leaf"></i>
              <p> Teapot </p>
          </div>
            <% end %>
            <% if @flat.kitchen %>
          <div class="col-sm-4 text-center" style="height: 88px;">
              <i class="fas fa-utensils"></i>
              <p> Kitchen </p>
          </div>
            <% end %>
            <% if @flat.printer %>
          <div class="col-sm-4 text-center" style="height: 88px;">
             <i class="fas fa-print"></i>
              <p> Printer </p>
          </div>
            <% end %>
        </div>
      </div>

      <div class="row row-condensend space-4">
        <div class="text-right col-sm-3">
          <p><strong>Price</strong></p>
        </div>
        <div class="text-left col-sm-9" id="no-border" style="padding-left: 38px;">
          <p> <%= @flat.price_per_day %> <%= '€' %> </p>
        </div>
      </div>

      <div class="row row-condensend space-4">
        <div class="text-right col-sm-3">
          <p><strong>Reviews</strong></p>
        </div>
        <div class="text-left col-sm-9" id="no-border" style="padding-left: 38px;">
            <% @flat.reviews.each do |review| %>
        <div class="row-condensed">
          <span><em>"<%= review.content %>"</em></span><span id="stars"><%= '☆'*review.rating %></span>
        </div>
          <% end %>
        </div>
      </div>

    </div>
    <div class="img">
      <% unless @flat.photo.blank? %>
      <%= cl_image_tag @flat.photo, height: 250, width: 350, crop: :fill  %>
      <% end %>
    </div>
  </div>

  <div class="third-container">
    <div class="col">
      <% if policy(@flat).edit? %>
        <%= link_to 'Edit your flat', edit_flat_path, class: 'btn btn-primary' %>
      <% end %>
    </div>
    <div class="col">
     <%= link_to 'Book this Flat', flat_bookings_path(@flat), class: 'btn btn-primary' %>
    </div>
  </div>
  <div class="fourth-container">
    <div
      id="map"
      style="width: 100%;
      height: 400px;"
      data-markers="<%= @marker.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
  </div>
</div>

