<div class="container">
  <div class="second-container">
    <h1><%= @flat.name.capitalize %></h1>
    <div class="panel-body">
      <%= form_for(@flat) do |f| %>
      <div class="row row-condensend space-4">
        <div class="text-right col-sm-3">
          <%= f.label :name %>
        </div>
        <div class="text-left col-sm-9">
          <%= f.text_field :name, id: 'no-border' %>
        </div>
      </div>
      <div class="row row-condensend space-4">
        <div class="text-right col-sm-3">
          <%= f.label :address %>
        </div>
        <div class="text-left col-sm-9">
          <%= f.text_field :address, id: 'no-border' %>
        </div>
      </div>
      <div class="row row-condensend space-4">
        <div class="text-right col-sm-3">
          <%= f.label :description %>
        </div>
        <div class="text-left col-sm-9">
          <%= f.text_area :description %>
        </div>
      </div>


    <div class="form-group string required flat_feature">
      <div class="row row-condensend space-4">
        <div class="text-right col-sm-3">
          <label class="form-control-label string required" for="flat_feature">Features <abbr title="required">*</abbr>
          </label>
        </div>
        <div class="text-left col-sm-9" id="no-border">
          <div class="form-group string required flat_feature">
            <div class="col-sm-4 text-center" style="height: 88px;">
              <label for="wifi">Wi-fi</label>
              <input type="checkbox" id="wifi" name="flat[wifi]" value="true">
            </div>
            <div class="col-sm-4 text-center" style="height: 88px;">
              <label for="meeting-room"> Meeting room</label>
              <input type="checkbox" id="meeting-room" name="flat[meeting_room]" value="true">
            </div>
            <div class="col-sm-4 text-center" style="height: 88px;">
              <label for="screen">TV screen</label>
              <input type="checkbox" id="screen" name="flat[screen]" value="true">
            </div>
            <div class="col-sm-4 text-center" style="height: 88px;">
              <label for="projector">Projector</label>
              <input type="checkbox" id="projector" name="flat[projector]" value="true">
            </div>
            <div class="col-sm-4 text-center" style="height: 88px;">
              <label for="speaker">Loud speaker</label>
              <input type="checkbox" id="speaker" name="flat[speaker]" value="true">
            </div>
            <div class="col-sm-4 text-center" style="height: 88px;">
              <label for="games">Video games</label>
              <input type="checkbox" id="games" name="flat[games]" value="true">
            </div>
            <div class="col-sm-4 text-center" style="height: 88px;">
              <label for="storage">Storage</label>
              <input type="checkbox" id="storage" name="flat[storage]" value="true">
            </div>
            <div class="col-sm-4 text-center" style="height: 88px;">
              <label for="coffee">Coffee</label>
              <input type="checkbox" id="coffee" name="flat[coffee]" value="true">
            </div>
            <div class="col-sm-4 text-center" style="height: 88px;">
              <label for="fridge">Fridge</label>
              <input type="checkbox" id="fridge" name="flat[fridge]" value="true">
            </div>
            <div class="col-sm-4 text-center" style="height: 88px;">
              <label for="teapot">Teapot</label>
              <input type="checkbox" id="teapot" name="flat[teapot]" value="true">
            </div>
            <div class="col-sm-4 text-center" style="height: 88px;">
              <label for="kitchen">Kitchen</label>
              <input type="checkbox" id="kitchen" name="flat[kitchen]" value="true">
            </div>
            <div class="col-sm-4 text-center" style="height: 88px;">
              <label for="printer">Printer</label>
              <input type="checkbox" id="printer" name="flat[printer]" value="true">
            </div>
          </div>
        </div>
      </div>
      </div>
    </div>
    <div class="row row-condensend space-4">
      <div class="text-right col-sm-3">
        <%= f.label :price_per_day %>
      </div>
      <div class="text-left col-sm-9">
        <%= f.text_field :price_per_day, id: 'no-border' %>
      </div>
    </div>
    <div class="row row-condensend space-4">
      <div class="text-right col-sm-3">
        <%= f.label :photo %>
      </div>
      <div class="text-left col-sm-9">
        <%= f.file_field :photo, id: 'no-border' %>
      </div>
    </div>
  </div>
  <div class="third-container">
      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
